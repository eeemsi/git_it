# i3 config file (v4)

# start applications on a certain workspace
assign [class="^chromium-browser$"] 2
assign [class="^Iceweasel$"] 2

# controling brightness
bindsym --release XF86MonBrightnessUp    exec xbacklight -inc 2
bindsym --release XF86MonBrightnessDown  exec xbacklight -dec 2

# controlling the audio
bindsym --release XF86AudioRaiseVolume   exec amixer set Master 2%+ unmute
bindsym --release XF86AudioLowerVolume   exec amixer set Master 2%- unmute
bindsym --release XF86AudioMute          exec amixer set Master mute

# fire up a screenlocker
bindsym --release XF86Launch1 exec i3lock -e -f -c 000000

# define the style for the borders
# class                 border  backgr  text    indicator
client.focused          #00bfd5 #222222 #00bfd5 #000000
client.urgent           #cc3333 #222222 #cc3333 #000000
client.focused_inactive #5f676a #222222 #ffffff #000000

new_window none

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 7.5

# use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

# start a terminal
bindsym Mod4+Return exec urxvtc

# kill focused window
bindsym Mod4+Shift+q kill

# start a program launcher
bindsym Mod4+p exec dmenu_run -nb \#000 -sb \#000 -sf \#00bfd5 -fn 'monospace:size=7.5'

# change focus
bindsym Mod4+Left   focus left
bindsym Mod4+Down   focus down
bindsym Mod4+Up     focus up
bindsym Mod4+Right  focus right

# move focused window
bindsym Mod4+Shift+Left  move left
bindsym Mod4+Shift+Down  move down
bindsym Mod4+Shift+Up    move up
bindsym Mod4+Shift+Right move right

# split in horizontal orientation
bindsym Mod4+h split h

# split in vertical orientation
bindsym Mod4+v split v

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym Mod4+s layout stacking
bindsym Mod4+t layout tabbed
bindsym Mod4+e layout toggle split

# toggle tiling / floating
bindsym Mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

# focus the parent container
bindsym Mod4+a focus parent

# focus the child container
bindsym Mod4+d focus child

# switch to workspace
bindsym Mod4+1 workspace 1
bindsym Mod4+2 workspace 2
bindsym Mod4+3 workspace 3
bindsym Mod4+4 workspace 4
bindsym Mod4+5 workspace 5
bindsym Mod4+6 workspace 6
bindsym Mod4+7 workspace 7
bindsym Mod4+8 workspace 8
bindsym Mod4+9 workspace 9
bindsym Mod4+0 workspace 10

bindsym Mod4+Ctrl+Left  workspace prev
bindsym Mod4+Ctrl+Right workspace next

# move focused container to workspace
bindsym Mod4+Shift+1 move container workspace 1
bindsym Mod4+Shift+2 move container workspace 2
bindsym Mod4+Shift+3 move container workspace 3
bindsym Mod4+Shift+4 move container workspace 4
bindsym Mod4+Shift+5 move container workspace 5
bindsym Mod4+Shift+6 move container workspace 6
bindsym Mod4+Shift+7 move container workspace 7
bindsym Mod4+Shift+8 move container workspace 8
bindsym Mod4+Shift+9 move container workspace 9
bindsym Mod4+Shift+0 move container workspace 10

# reload the configuration file
bindsym Mod4+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod4+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym Mod4+Shift+e exit

# Make the currently focused window a scratchpad
bindsym Mod4+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym Mod4+minus scratchpad show

# Resize window (you can also use the mouse for that)
mode "resize" {
    bindsym Down     resize shrink height 5 px or 5 ppt
    bindsym Up       resize grow   height 5 px or 5 ppt
    bindsym Left     resize shrink width  5 px or 5 ppt
    bindsym Right    resize grow   width  5 px or 5 ppt

    # back to normal: Escape
    bindsym Escape mode "default"
}

bindsym Mod4+r mode "resize"

# move a workspace to a different output (e.g. from LVDS1 to VGA1)
mode "move_workspace" {
    bindsym Left     move workspace to output left
    bindsym Down     move workspace to output down
    bindsym Up       move workspace to output up
    bindsym Right    move workspace to output right

    # back to normal: Escape
    bindsym Escape mode "default"
}

bindsym Mod4+o mode "move_workspace"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    tray_output     primary
    position        top
    status_command  i3status

    colors {
        #colorclass         border  backgr  text
        focused_workspace   #00bfd5 #222222 #00bfd5
        urgent_workspace    #cc3333 #222222 #cc3333
    }
}
