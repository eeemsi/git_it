# name workspaces
set $ws1  1:一
set $ws2  2:二
set $ws3  3:三
set $ws4  4:四
set $ws5  5:五
set $ws6  6:六
set $ws7  7:七
set $ws8  8:八
set $ws9  9:九
set $ws10 10:十

# start applications on a certain workspace
assign [class="^Chromium$"]     → $ws2
assign [class="^Firefox-esr$"]  → $ws2

# controling brightness
bindsym --release XF86MonBrightnessUp    exec "xbacklight -inc 2"
bindsym --release XF86MonBrightnessDown  exec "xbacklight -dec 2"

# controlling the audio
bindsym --release XF86AudioRaiseVolume   exec "amixer set Master 2%+ unmute"
bindsym --release XF86AudioLowerVolume   exec "amixer set Master 2%- unmute"
bindsym --release XF86AudioMute          exec "amixer set Master mute"

# fire up a screenlocker
bindsym --release XF86Launch1 exec "i3lock -e -f -c 000000"

# class                 border  backgr. text    indicator child_border
client.focused          #00bfd5 #222222 #00bfd5 #00bfd5   #00bfd5
client.focused_inactive #333333 #222222 #ffffff #333333   #333333
client.unfocused        #333333 #222222 #888888 #333333   #333333
client.urgent           #cc3333 #222222 #cc3333 #cc3333   #cc3333
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

# define style of borders
new_window  pixel 1
new_float   pixel 1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

# start a terminal
bindsym Mod4+Return exec "urxvtc"

# kill focused window
bindsym Mod4+Shift+q kill

# start a program launcher
bindsym Mod4+p exec "dmenu_run -nb black -sb black -sf '#00bfd5' -fn 'monospace:size=8'"

# change focus
bindsym Mod4+Left   focus left
bindsym Mod4+Down   focus down
bindsym Mod4+Up     focus up
bindsym Mod4+Right  focus right

# move focused window
bindsym Mod4+Shift+Left  move left
bindsym Mod4+Shift+Down  move down
bindsym Mod4+Shift+Up    move up
bindsym Mod4+Shift+Right move right

# split in horizontal orientation
bindsym Mod4+h split h

# split in vertical orientation
bindsym Mod4+v split v

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen

# change container layout (stacked, tabbed, default(splith))
bindsym Mod4+s layout stacking
bindsym Mod4+t layout tabbed
bindsym Mod4+e layout default

# toggle tiling / floating
bindsym Mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

# focus the parent container
bindsym Mod4+a focus parent

# focus the child container
bindsym Mod4+d focus child

# switch to workspace
bindsym Mod4+1 workspace $ws1
bindsym Mod4+2 workspace $ws2
bindsym Mod4+3 workspace $ws3
bindsym Mod4+4 workspace $ws4
bindsym Mod4+5 workspace $ws5
bindsym Mod4+6 workspace $ws6
bindsym Mod4+7 workspace $ws7
bindsym Mod4+8 workspace $ws8
bindsym Mod4+9 workspace $ws9
bindsym Mod4+0 workspace $ws10

bindsym Mod4+period workspace next
bindsym Mod4+comma  workspace prev

# move focused container to workspace
bindsym Mod4+Shift+1 move container workspace $ws1
bindsym Mod4+Shift+2 move container workspace $ws2
bindsym Mod4+Shift+3 move container workspace $ws3
bindsym Mod4+Shift+4 move container workspace $ws4
bindsym Mod4+Shift+5 move container workspace $ws5
bindsym Mod4+Shift+6 move container workspace $ws6
bindsym Mod4+Shift+7 move container workspace $ws7
bindsym Mod4+Shift+8 move container workspace $ws8
bindsym Mod4+Shift+9 move container workspace $ws9
bindsym Mod4+Shift+0 move container workspace $ws10

# reload the configuration file
bindsym Mod4+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod4+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym Mod4+Shift+e exit

# Make the currently focused window a scratchpad
bindsym Mod4+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym Mod4+minus scratchpad show

# Resize window (you can also use the mouse for that)
bindsym Mod4+Ctrl+Left  resize shrink width  5 px or 5 ppt
bindsym Mod4+Ctrl+Down  resize grow   height 5 px or 5 ppt
bindsym Mod4+Ctrl+Up    resize shrink height 5 px or 5 ppt
bindsym Mod4+Ctrl+Right resize grow   width  5 px or 5 ppt


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    strip_workspace_numbers yes
    tray_output             none
    position                top
    status_command          i3status

    colors {
        background #000000
        statusline #ffffff
        separator  #666666

        # class            border  backgr. text
        focused_workspace  #00bfd5 #222222 #00bfd5
        active_workspace   #333333 #222222 #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #cc3333 #222222 #cc3333
        binding_mode       #2f343a #cc3333 #ffffff
    }
}
