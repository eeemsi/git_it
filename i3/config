# i3 config file (v4)

# setting up some variables for better readability and easier changes
set $a assign
set $b bindsym
set $ensid exec --no-startup-id
set $Mod Mod4

# start applications on a certain workspace
$a [class="^Chromium$"] 2

# controling brightness
$b --release XF86MonBrightnessUp    $ensid xbacklight -inc 2
$b --release XF86MonBrightnessDown  $ensid xbacklight -dec 2

# controlling the audio
$b --release XF86AudioMute $ensid amixer set Master mute
$b --release XF86AudioLowerVolume $ensid amixer set Master 2%- unmute
$b --release XF86AudioRaiseVolume $ensid amixer set Master 2%+ unmute

# fire up a screenlocker
$b --release XF86Launch1 $ensid i3lock -e -f -c 000000

# define the style for the borders
new_window none

client.focused          #00bfd5 #222222 #00bfd5
client.focused_inactive #5f676a #222222 #ffffff
client.urgent           #cc3333 #222222 #cc3333

# font for window titles
font pango:monospace 7.5

# use Mouse+$Mod to drag floating windows to their wanted position
floating_modifier $Mod

# start a terminal
$b $Mod+Return $ensid urxvtc

# kill focused window
$b $Mod+Shift+q kill

# start a program launcher
$b $Mod+p $ensid dmenu_run -b -nb \#000 -sb \#000 -sf \#00bfd5

# change focus
$b $Mod+Left focus left
$b $Mod+Down focus down
$b $Mod+Up focus up
$b $Mod+Right focus right

# change focus to latest urgent window
$b $Mod+x [urgent=latest] focus

# move focused window
$b $Mod+Shift+Left move left
$b $Mod+Shift+Down move down
$b $Mod+Shift+Up move up
$b $Mod+Shift+Right move right

# split in horizontal orientation
$b $Mod+h split h

# split in vertical orientation
$b $Mod+v split v

# enter fullscreen mode for the focused container
$b $Mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
$b $Mod+s layout stacking
$b $Mod+t layout tabbed
$b $Mod+e layout toggle split

# toggle tiling / floating
$b $Mod+Shift+space floating toggle

# change focus between tiling / floating windows
$b $Mod+space focus mode_toggle

# focus the parent container
$b $Mod+a focus parent

# focus the child container
$b $Mod+d focus child

# switch to workspace
$b $Mod+1 workspace 1
$b $Mod+2 workspace 2
$b $Mod+3 workspace 3
$b $Mod+4 workspace 4
$b $Mod+5 workspace 5
$b $Mod+6 workspace 6
$b $Mod+7 workspace 7
$b $Mod+8 workspace 8
$b $Mod+9 workspace 9
$b $Mod+0 workspace 10

# move focused container to workspace
$b $Mod+Shift+1 move container workspace 1
$b $Mod+Shift+2 move container workspace 2
$b $Mod+Shift+3 move container workspace 3
$b $Mod+Shift+4 move container workspace 4
$b $Mod+Shift+5 move container workspace 5
$b $Mod+Shift+6 move container workspace 6
$b $Mod+Shift+7 move container workspace 7
$b $Mod+Shift+8 move container workspace 8
$b $Mod+Shift+9 move container workspace 9
$b $Mod+Shift+0 move container workspace 10

# reload the configuration file
$b $Mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$b $Mod+Shift+r restart
# exit i3 (logs you out of your X session)
$b $Mod+Shift+e exit

# Make the currently focused window a scratchpad
$b $Mod+Shift+minus move scratchpad

# Show the first scratchpad window
$b $Mod+minus scratchpad show

# Resize window (you can also use the mouse for that)
mode "resize" {
    $b Left     resize shrink width 10 px or 10 ppt
    $b Down     resize shrink height 10 px or 10 ppt
    $b Up       resize grow height 10 px or 10 ppt
    $b Right    resize grow width 10 px or 10 ppt

    # back to normal: Escape
    $b Escape mode "default"
}

$b $Mod+r mode "resize"

# move a workspace to a different output (e.g. from LVDS1 to VGA1)
mode "move_workspace" {
    $b Left     move workspace to output left
    $b Down     move workspace to output down
    $b Up       move workspace to output up
    $b Right    move workspace to output right

    # back to normal: Escape
    $b Escape mode "default"
}

$b $Mod+o mode "move_workspace"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        focused_workspace #00bfd5 #222222 #00bfd5
        urgent_workspace  #cc3333 #222222 #cc3333
    }

    tray_output primary

    status_command i3status -c "${HOME}"/.i3/i3status.conf
}
