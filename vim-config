" was given by linux distro
runtime! debian.vim
 
" enable colors for syntax
syntax on
set bg=dark 

" Display cursorline
set cursorline

" Color of the Cursorline
hi CursorLine guibg=grey9
 
" Color of the tabline
hi TabLine term=underline cterm=bold ctermfg=green ctermbg=black

" THEMES!!!
colorscheme elflord

" Set encoding to utf-8
set fileencoding=utf-8 encoding=utf-8

" Always hide the statusline
set laststatus=2

" needs http://www.vim.org/scripts/script.php?script_id=2258 to work
function! CurDir()
   let curdir = substitute(getcwd(), '/home/msi/', "~/", "g")
   return curdir
endfunction

"Format the statusline
set statusline=\ %F%m%r%h\ %w\ \ CWD:\ %r%{CurDir()}%h\ \ \ Line:\ %l/%L:%c\ %{GitBranchInfoString()}
set showcmd

" Enhanced mode for command-line completion
set wildmenu

" Enable listing possible completions when completing file names
set wildmode=longest,list:longest,list:full

" Set the terminals title
set title

" For searching
set ignorecase
set incsearch
set hlsearch
 
" Commands reagarding vimrc
" When .vimrc is edited, automatically reload it
autocmd! bufwritepost .vimrc source ~/.vimrc

" Search ToDos
function! TODO()
        :vimgrep /@todo\|FIXME/ **/*
        :cwindow
endfunction

" defines tab and shift width
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" handle long lines and stuff correctly
set wrap
set autoindent smartindent
set ttyfast

" fast paste mode toggling
set pastetoggle=<F12>

" show matching brackets
set showmatch

" security
set modelines=0

" Donâ€™t ensure compatibility with vi at all cost
set nocompatible
