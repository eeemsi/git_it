# Define size for HISTFILE and SAVEHIST also define path for HISTFILE
HISTSIZE=2000
SAVEHIST=2000
HISTFILE=~/.zsh_history

# Append to $HISTFILE incrementally (does not wait for the shell to exit)
setopt INC_APPEND_HISTORY

# Remove duplicates from the history even if it is not the previous one
setopt HIST_IGNORE_ALL_DUPS

# Remove superfluous blanks from each command line being added to the history list
setopt HIST_REDUCE_BLANKS

# Don't store commands prefixed with a space
setopt HIST_IGNORE_SPACE
