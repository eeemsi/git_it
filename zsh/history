# Define size for HISTFILE and SAVEHIST also define path for HISTFILE
HISTSIZE=4096
SAVEHIST=4096
HISTFILE=~/.zsh_history

# Append to $HISTFILE incrementally (does not wait for the shell to exit)
setopt INC_APPEND_HISTORY

# Remove duplicates from the history even if it is not the previous one
setopt HIST_IGNORE_ALL_DUPS

# Remove superfluous blanks from each command line being added to the history list
setopt HIST_REDUCE_BLANKS

# Don't store commands prefixed with a space
setopt HIST_IGNORE_SPACE

# Make cd push the old directory onto the directory stack
setopt AUTO_PUSHD

# Do not push copies of the directory onto the directory stack
setopt PUSHD_IGNORE_DUPS

# Do not print the directory stack after pushd or popd
setopt PUSHD_SILENT

# Exchanges the meanings of "+" and "-" when used with a number to specify a directory in the stack
setopt PUSHD_MINUS
