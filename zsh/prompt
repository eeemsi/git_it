# Set up the prompt
autoload -Uz promptinit
promptinit

# Check for an interactive session
[ -z "$PS1" ] && return

# Defines the prompt depending on the status of $SSH_CONNECTION
setup_prompt() {
    if [ ! -z "$SSH_CONNECTION" ]; then
        _user_="%n@%m"
        ssh_con_tmux
    else
        _user_="%n"
    fi

    PS1="%K{green}%F{black}$_user_%f%k${fg_white} %~ \${vcs_info_msg_0_}%# "
}

setup_prompt
