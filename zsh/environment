# Export language
unset LC_ALL
export LANG=en_US.UTF-8
export LC_MESSAGES=C

# Long date format in ls(1)
export TIME_STYLE=long-iso

# Sets the editor and pager
export EDITOR='vim'
export PAGER='less -nX'

# Expand path to /usr/sbin and /sbin
export PATH=$PATH:/usr/sbin:/sbin

# Report about cpu-/system-/user-time of command if running >REPORTTIME seconds
REPORTTIME=10

# Timeout, in hundredths of seconds, when reading bound multi-character
# sequences (default is 0.4 sec.)
KEYTIMEOUT=1

# An array (colon-separated list) of login/logout events to report.
watch=(notme, root)

# Prevent from accidentally overwriting an existing file
setopt NOCLOBBER

# Disable output flow control via start/stop characters (^S/^Q)
unsetopt FLOW_CONTROL

# Disable checks regarding new mails
unset MAILCHECK
unsetopt MAIL_WARNING

# Disable pc speaker beep
unsetopt BEEP

