# Export language
unset LC_ALL
export LANG=en_US.UTF-8
export LC_MESSAGES=C

# Set the short date to YYYY-MM-DD
export LC_TIME=en_DK.UTF-8

# Long date format in ls(1)
export TIME_STYLE=long-iso

# Sets the editor and pager
export EDITOR='vim'
export PAGER='less -nX'

# Expand path to /usr/sbin and /sbin
export PATH=$PATH:/usr/sbin:/sbin

# Report about cpu-/system-/user-time of command if running >REPORTTIME seconds
REPORTTIME=10

# Timeout, in hundredths of seconds, when reading bound multi-character sequences
KEYTIMEOUT=1

# An array (colon-separated list) of login/logout events to report.
watch=(notme, root)

# Prevent from accidentally overwriting an existing file
setopt NOCLOBBER

# Disable flow-control with ^S and ^Q
setopt noflowcontrol
