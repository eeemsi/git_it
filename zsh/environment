# Sets the editor and other stuff
export EDITOR='vim'
export VISUAL='vim'
export PAGER='less'
export VTYSH_PAGER='cat'

# Expand path to /usr/sbin and /sbin
export PATH=~/.bin:$PATH:/usr/sbin:/sbin

# Set PATHs for node.js
export NODE_PATH=/opt/node:/opt/node/lib/node_modules
export PATH=$PATH:/opt/node/bin

# Long date format in ls(1)
export TIME_STYLE=long-iso

# Report about cpu-/system-/user-time of command if running >REPORTTIME seconds
REPORTTIME=5

# NO BEEPING!
setopt NO_BEEP

# Don't send HUP signal to background jobs when exiting zsh
setopt NO_HUP

# List jobs in the long format
setopt LONG_LIST_JOBS

# Watch for everyone but me and root
watch=(notme root)

# Don't display an error if there are no matches, I know what I am doing
setopt NO_NOMATCH

# Disable Flow Control
stty -ixon

# Make quoted expression containing a newline illegal
setopt CSHJUNKIEQUOTES

# Prevent from accidentally overwriting an existing file
setopt NOCLOBBER
