# Replacement for ps uax | grep $foo
psof () {
    PIDS=$(pidof ${1})
    [ -z "${PIDS}" ] && { echo "No such process"; return }
    ps -p "$PIDS" u
}

# Force rehash of tab completion for NEW commands when completing something
_force_rehash() {
    (( CURRENT == 1 )) && rehash
    return 1
}

# Create directoy and cd to it
mkcd () {
    mkdir -p "$@" && cd "$@"
}

# Create temporary directory and cd to it
cdt () {
    local t
    t=$(mktemp -d)
    echo "$t"
    builtin cd "$t"
}

# Create a directory, cd into it and create a git repository
mkgit () {
     mkdir -p "$@" && cd "$@" && git init
}
