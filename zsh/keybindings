# Increasing the comfort for forward-word and backward-word
export WORDCHARS='.,*?_-[]~=&;!#$%^(){}<>'

# Use emacs style for input keys by default
bindkey -e
bindkey '^P'  up-line-or-search   # cursor up
bindkey '^N'  down-line-or-search # cursor down

bindkey '^F'    forward-word        # ctrl cursor right
bindkey '^B'    backward-word       # ctrl cursor left

bindkey ' '     magic-space         # perform history expansion
                                    # and insert a space into the buffer

