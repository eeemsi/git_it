# Use emacs style for input keys by default
bindkey -e
bindkey '\e[A'  up-line-or-search       # cursor up
bindkey '\e[B'  down-line-or-search     # cursor down

bindkey '\e[3~' delete-char             # delete characterwise
bindkey '\e[7~' beginning-of-line       # home
bindkey '\e[8~' end-of-line             # end

bindkey '^[[C'  forward-word            # ctrl cursor right
bindkey '^[[D'  backward-word           # ctrl cursor left
