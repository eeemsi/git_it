# Create temporary directory and cd to it
alias cdt='builtin cd "$(mktemp -d)"'

# Comfortable aliases
alias g='git'
alias gst='g status'
alias glog='g log --graph --stat --decorate --date=iso'
alias gd='g diff'
alias gc='g commit'

alias ..='cd ..'

alias la='ls -hFNa'
alias l='ls -hFN'

alias cp='rsync -ahP'

# Nicer output of grep
alias grep='grep --color=always --initial-tab'
alias rgrep='rgrep --color=always --initial-tab'

# Required to pipe colors to less
alias less='less -FXR'

