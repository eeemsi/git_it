# essential use of ls
alias la='ls -hla --color'
alias l='ls -hlF --color'

# More comfortable aliases
alias g='git'
alias gst='g status'
alias glog='g log --graph --stat'
alias gd='g diff'
alias gc='g commit'

alias 6='ip -6'
alias 4='ip -4'

alias ..='cd ..'
alias ...='cd ../..'

# Nicer output of grep
alias grep='grep --color=always --initial-tab'

# Required to pipe colors to less
alias less='less -FXR'

# Alias cp to rsync
alias cp='rsync -ahP'
alias cpz='rsync -ahPz'
