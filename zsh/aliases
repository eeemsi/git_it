# Create temporary directory and cd to it
alias cdt='builtin cd "$(mktemp -d)"'

# Comfortable aliases
alias ..='cd ..'
alias cp='cp -v'
alias g='git'
alias gc='g commit'
alias gd='g diff'
alias glog='g log --graph --oneline'
alias gst='g status --short --branch'
alias history='history -i'
alias ip='ip -color -brief'
alias l='ls -h -F'
alias la='ls -h -F -a'
alias mv='mv -v'
alias view='nvim -R'

# Nicer output of grep
alias grep='grep --color=auto --initial-tab'
alias rgrep='rgrep --color=auto --initial-tab'

# Suppresses line numbers in less
alias less='less --line-numbers'
