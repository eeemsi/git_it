# Do we have GNU ls with color-support?
alias la='ls -S -hla --color=auto'
alias l='ls -S -hlF --color=auto'

# More comfortable aliases
alias g='git'
alias gst='g status'
alias glog='g log --graph --stat --oneline'
alias ga='g add'
alias gd='g diff'
alias gc='g commit'

alias 6='ip -6'
alias 4='ip -4'

alias ..='cd ..'
alias ...='cd ../..'

alias pd='perldoc'

# Nicer output of grep
alias grep='grep --color=auto --initial-tab'

# Required to pipe colors to less
alias less='less -R'

# Alias cp to rsync
alias cp='rsync -ahP'
alias cpz='rsync -ahPz'
