# Create temporary directory and cd to it
alias cdt='builtin cd $(mktemp -d)'

# Comfortable aliases
alias g='git'
alias gst='g status --short --branch'
alias glog='g log --pretty=format:"%C(auto)%h %d %s %C(black)%ar%C(reset)" --graph'
alias gd='g diff'
alias gc='g commit'

alias ..='cd ..'

alias la='ls -hFNa'
alias l='ls -hFN'

alias cp='rsync -ahP'

# Nicer output of grep
alias grep='grep --color=auto --initial-tab'
alias rgrep='rgrep --color=auto --initial-tab'

# Required to pipe colors to less
alias less='less -XR'

