# Essential use of ls
alias la='ls -hlFa --color'
alias l='ls -hlF --color'

# Create temporary directory and cd to it
alias cdt='builtin cd "$(mktemp -d)"'

# More comfortable aliases
alias g='git'
alias gst='g status'
alias glog='g log --graph --stat --decorate'
alias gd='g diff'
alias gc='g commit'

alias ..='cd ..'

# Nicer output of grep
alias grep='grep --color=always --initial-tab'

# Required to pipe colors to less
alias less='less -FXR'

# Alias cp to rsync
alias cp='rsync -ahP'

