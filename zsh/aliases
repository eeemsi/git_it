# Do we have GNU ls with color-support?
if ls --help 2>/dev/null | grep -- --color= >/dev/null && [[ "$TERM" != dumb ]] ; then
    alias ls='ls -b -CF --color=auto'
    alias la='ls -la --color=auto'
    alias ll='ls -l --color=auto'
    alias lh='ls -hAl --color=auto'
    alias l='ls -hlF --color=auto'
else
    alias ls='ls -b -CF'
    alias la='ls -la'
    alias ll='ls -l'
    alias lh='ls -hAl'
    alias l='ls -hlF'
fi

# Required to pipe colors to less
alias less='less -R'

# More comfortable aliases
alias s='sudo'

alias g='git'
alias gst='g status'
alias glog='g log --graph --stat'
alias ga='g add'
alias gd='g diff'
alias gc='g commit'

# Nicer output of grep
alias grep='grep --color=auto --initial-tab'
