# i3 config file (v4)

# setting up some variables for better readability and easier changes
set $a      assign
set $b      bindsym
set $ensid  exec --no-startup-id
set $Mod    Mod1

# start applications on a certain workspace
$a [class="^Chromium$"] 2

# start applications in certain conditions
for_window [class="^kvm$"]          floating enable
for_window [class="^MPlayer$"]      floating enable
for_window [class="^bomberclone$"]  floating enable

# controlling the audio
$b XF86AudioMute        $ensid amixer set Master toggle
$b XF86AudioLowerVolume $ensid amixer set Master 5%-
$b XF86AudioRaiseVolume $ensid amixer set Master 5%+

# fire up i3lock
$b XF86Launch1 $ensid i3lock -d

# use 1pixel borders by default
new_window 1pixel

# use orange borders for focused window
client.focused #ff6622 #ff6622 #000000 #ff6622

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--10-100-*-*-*-60-iso10646-1

# use Mouse+$Mod to drag floating windows to their wanted position
floating_modifier $Mod

# retrieve a list of windows to focus on
$b $Mod+g $ensid python3 -O ${HOME}/.i3/nextfind.py

# start a terminal
$b $Mod+Return $ensid urxvtc

# kill focused window
$b $Mod+Shift+q kill

# start dmenu (a program launcher)
$b $Mod+p $ensid dmenu_run -b -nb '#000000' -nf '#ffffff' -sb '#ff6622' -sf '#000000'

# change focus
$b $Mod+j focus left
$b $Mod+k focus down
$b $Mod+l focus up
$b $Mod+semicolon focus right

# alternatively, you can use the cursor keys:
$b $Mod+Left focus left
$b $Mod+Down focus down
$b $Mod+Up focus up
$b $Mod+Right focus right

# move focused window
$b $Mod+Shift+j move left
$b $Mod+Shift+k move down
$b $Mod+Shift+l move up
$b $Mod+Shift+odiaeresis move right

# alternatively, you can use the cursor keys:
$b $Mod+Shift+Left move left
$b $Mod+Shift+Down move down
$b $Mod+Shift+Up move up
$b $Mod+Shift+Right move right

# split in horizontal orientation
$b $Mod+h split h

# split in vertical orientation
$b $Mod+v split v

# enter fullscreen mode for the focused container
$b $Mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
$b $Mod+s layout stacking
$b $Mod+t layout tabbed
$b $Mod+e layout toggle split

# toggle tiling / floating
$b $Mod+Shift+space floating toggle

# change focus between tiling / floating windows
$b $Mod+space focus mode_toggle

# focus the parent container
$b $Mod+a $ensid i3-msg focus parent

# focus the child container
$b $Mod+d $ensid i3-msg focus child

# switch to workspace
$b $Mod+1 workspace 1
$b $Mod+2 workspace 2
$b $Mod+3 workspace 3
$b $Mod+4 workspace 4
$b $Mod+5 workspace 5
$b $Mod+6 workspace 6
$b $Mod+7 workspace 7
$b $Mod+8 workspace 8
$b $Mod+9 workspace 9
$b $Mod+0 workspace 10

# move focused container to workspace
$b $Mod+Shift+1 move container to workspace 1
$b $Mod+Shift+2 move container to workspace 2
$b $Mod+Shift+3 move container to workspace 3
$b $Mod+Shift+4 move container to workspace 4
$b $Mod+Shift+5 move container to workspace 5
$b $Mod+Shift+6 move container to workspace 6
$b $Mod+Shift+7 move container to workspace 7
$b $Mod+Shift+8 move container to workspace 8
$b $Mod+Shift+9 move container to workspace 9
$b $Mod+Shift+0 move container to workspace 10

# reload the configuration file
$b $Mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$b $Mod+Shift+r restart
# exit i3 (logs you out of your X session)
$b $Mod+Shift+e exit

# Make the currently focused window a scratchpad
$b $Mod+Shift+minus move scratchpad

# Show the first scratchpad window
$b $Mod+minus scratchpad show

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status -c $HOME/.i3status.conf
    colors {
        focused_workspace #ff6622 #ff6622 #000000
        urgent_workspace  #00ff00 #00ff00 #000000
    }
}
