# i3 config file (v4)

# setting up some variables for better readability and easier changes
set $a      assign
set $b      bindsym
set $ensid  exec --no-startup-id
set $Mod    Mod1

# start nm-applet
$ensid nm-applet

# start applications on a certain workspace
$a [class="^Chromium$"] 2

# start applications in certain conditions
for_window [class="^kvm$"] floating enable

# controlling the audio
$b XF86AudioMute        $ensid amixer set Master toggle
$b XF86AudioLowerVolume $ensid amixer set Master 5%- unmute
$b XF86AudioRaiseVolume $ensid amixer set Master 5%+ unmute

# define a terminal for presentations
$b $Mod+Shift+p $ensid urxvtc -fn "xft:Bitstream Vera Sans Mono:pixelsize=17"

# fire up a screenlocker
$b XF86Launch1 $ensid xtrlock

# define the style for the borders
new_window 1pixel
hide_edge_borders both

# define the colors of the focused client
client.focused #b5b5b5 #b5b5b5 #000000 #b5b5b5

# define the color for the window that raised the urgency hint
client.urgent  #3dae3d #3dae3d #000000 #3dae3d

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--10-100-*-*-*-60-iso10646-1

# use Mouse+$Mod to drag floating windows to their wanted position
floating_modifier $Mod

# start a terminal
$b $Mod+Return $ensid urxvtc

# kill focused window
$b $Mod+Shift+q kill

# start dmenu (a program launcher)
$b $Mod+p $ensid dmenu_run -b -nb '#000000' -nf '#b5b5b5' -sb '#b5b5b5' -sf '#000000'

# change focus
$b $Mod+j focus left
$b $Mod+k focus down
$b $Mod+l focus up
$b $Mod+odiaeresis focus right

# alternatively, you can use the cursor keys:
$b $Mod+Left focus left
$b $Mod+Down focus down
$b $Mod+Up focus up
$b $Mod+Right focus right

# move focused window
$b $Mod+Shift+j move left
$b $Mod+Shift+k move down
$b $Mod+Shift+l move up
$b $Mod+Shift+odiaeresis move right

# alternatively, you can use the cursor keys:
$b $Mod+Shift+Left move left
$b $Mod+Shift+Down move down
$b $Mod+Shift+Up move up
$b $Mod+Shift+Right move right

# split in horizontal orientation
$b $Mod+h split h

# split in vertical orientation
$b $Mod+v split v

# enter fullscreen mode for the focused container
$b $Mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
$b $Mod+s layout stacking
$b $Mod+t layout tabbed
$b $Mod+e layout toggle split

# toggle tiling / floating
$b $Mod+Shift+space floating toggle

# change focus between tiling / floating windows
$b $Mod+space focus mode_toggle

# focus the parent container
$b $Mod+a $ensid i3-msg focus parent

# focus the child container
$b $Mod+d $ensid i3-msg focus child

# switch to workspace
$b $Mod+1 workspace 1
$b $Mod+2 workspace 2
$b $Mod+3 workspace 3
$b $Mod+4 workspace 4
$b $Mod+5 workspace 5
$b $Mod+6 workspace 6
$b $Mod+7 workspace 7
$b $Mod+8 workspace 8
$b $Mod+9 workspace 9
$b $Mod+0 workspace 10

# move focused container to workspace
$b $Mod+Shift+1 $ensid i3-msg move container workspace 1
$b $Mod+Shift+2 $ensid i3-msg move container workspace 2
$b $Mod+Shift+3 $ensid i3-msg move container workspace 3
$b $Mod+Shift+4 $ensid i3-msg move container workspace 4
$b $Mod+Shift+5 $ensid i3-msg move container workspace 5
$b $Mod+Shift+6 $ensid i3-msg move container workspace 6
$b $Mod+Shift+7 $ensid i3-msg move container workspace 7
$b $Mod+Shift+8 $ensid i3-msg move container workspace 8
$b $Mod+Shift+9 $ensid i3-msg move container workspace 9
$b $Mod+Shift+0 $ensid i3-msg move container workspace 10

# reload the configuration file
$b $Mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$b $Mod+Shift+r restart
# exit i3 (logs you out of your X session)
$b $Mod+Shift+e exit

# Make the currently focused window a scratchpad
$b $Mod+Shift+minus move scratchpad

# Show the first scratchpad window
$b $Mod+minus scratchpad show

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym j           resize shrink width 10 px or 10 ppt
    bindsym k           resize grow height 10 px or 10 ppt
    bindsym l           resize shrink height 10 px or 10 ppt
    bindsym odiaeresis   resize grow width 10 px or 10 ppt

    # back to normal: Escape
    bindsym Escape mode "default"
}

bindsym Mod1+r mode "resize"


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status -c $HOME/.i3status.conf
    colors {
        focused_workspace #b5b5b5 #b5b5b5 #000000
        urgent_workspace  #3dae3d #3dae3d #000000
    }
}
