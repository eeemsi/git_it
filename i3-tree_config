# i3 config file (v4)

# setting up two variables for --no-startup-id and bindsym
set $a      assign
set $b      bindsym
set $ensid  exec --no-startup-id

# start applications on a certain workspace
$a [class="^Chromium$"] 2

# start applications in floating mode and/or other certain conditions
for_window [class="^kvm$"]      floating enable
for_window [class="^MPlayer$"]  floating enable

# controlling the audio
$b XF86AudioMute        $ensid amixer set Master toggle
$b XF86AudioLowerVolume $ensid amixer set Master 5%-
$b XF86AudioRaiseVolume $ensid amixer set Master 5%+

# fire up i3lock
$b XF86Launch1 $ensid i3lock -i ~/Downloads/nodejs-1440x900.png

# use 1pixel borders by default
new_window 1pixel

# use orange borders for focused window
client.focused #ff6622 #ff6622 #000000

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--10-100-*-*-*-60-iso10646-1

# allways open new windows vertical instead of horizontal
default_orientation vertical

# use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# start a terminal
$b Mod1+Return $ensid urxvtc

# kill focused window
$b Mod1+Shift+q kill

# start dmenu (a program launcher)
$b Mod1+p $ensid dmenu_run -b -nb '#000000' -nf '#ffffff' -sb '#ff6622' -sf '#000000'

# change focus
$b Mod1+j focus left
$b Mod1+k focus down
$b Mod1+l focus up
$b Mod1+odiaeresis focus right

# alternatively, you can use the cursor keys:
$b Mod1+Left focus left
$b Mod1+Down focus down
$b Mod1+Up focus up
$b Mod1+Right focus right

# move focused window
$b Mod1+Shift+j move left
$b Mod1+Shift+k move down
$b Mod1+Shift+l move up
$b Mod1+Shift+odiaeresis move right

# alternatively, you can use the cursor keys:
$b Mod1+Shift+Left move left
$b Mod1+Shift+Down move down
$b Mod1+Shift+Up move up
$b Mod1+Shift+Right move right

# split in horizontal orientation
$b Mod1+h split h

# split in vertical orientation
$b Mod1+v split v

# enter fullscreen mode for the focused container
$b Mod1+f fullscreen

# change container layout (stacked, tabbed, default)
$b Mod1+s layout stacking
$b Mod1+t layout tabbed
$b Mod1+e layout default

# toggle tiling / floating
$b Mod1+Shift+space floating toggle

# change focus between tiling / floating windows
$b Mod1+space focus mode_toggle

# focus the parent container
$b Mod1+a focus parent

# focus the parent container
$b Mod1+d focus child

# Make the currently focused window a scratchpad
$b Mod1+Shift+minus move scratchpad

# Show the first scratchpad window
$b Mod1+minus scratchpad show

# switch to workspace
$b Mod1+1 workspace 1
$b Mod1+2 workspace 2
$b Mod1+3 workspace 3
$b Mod1+4 workspace 4
$b Mod1+5 workspace 5
$b Mod1+6 workspace 6
$b Mod1+7 workspace 7
$b Mod1+8 workspace 8
$b Mod1+9 workspace 9
$b Mod1+0 workspace 10

# move focused container to workspace
$b Mod1+Shift+1 move workspace 1
$b Mod1+Shift+2 move workspace 2
$b Mod1+Shift+3 move workspace 3
$b Mod1+Shift+4 move workspace 4
$b Mod1+Shift+5 move workspace 5
$b Mod1+Shift+6 move workspace 6
$b Mod1+Shift+7 move workspace 7
$b Mod1+Shift+8 move workspace 8
$b Mod1+Shift+9 move workspace 9
$b Mod1+Shift+0 move workspace 10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$b Mod1+Shift+r restart

# exit i3 (logs you out of your X session)
$b Mod1+Shift+e exit

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
    colors {
        focused_workspace #ff6622 #ff6622 #000000
        urgent_workspace  #00ff00 #00ff00 #000000
    }
}
