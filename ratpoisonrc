unbind *
startup_message off
warp on

set barborder 0
set fgcolor #cfdb6c
set bgcolor #222222
set fwcolor #ff662

unmanage MPlayer
escape C-q
set winname title
set winfmt %n %s %t

bind F4 quit
bind F5 restart
bind quotedbl exec ratpoison -c "select `ratpoison -c "windows" | dmenu  -nb '#000000' -nf '#888888' -sb '#f62' -sf '#222222' -l 4 | awk '{print $1}'`"

definekey top M-p exec exec $(dmenu_run -nb '#000000' -nf '#888888' -sb '#f62' -sf '#222222')

