# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1
    color_good = "#00ff00"
    color_bad = "#900000"
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "volume master"
order += "load"
order += "tztime utc"

wireless _first_ {
    format_up = "W: (%essid)"
    format_down = ""
}

ethernet _first_ {
    format_up = "E:"
    format_down = ""
}

battery all {
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    hide_seconds = true
    format_down = ""
}

cpu_temperature 0 {
    format = "T: %degrees °C"
}

tztime utc {
    format = "%Y-%m-%d %H:%M"
    timezone = "UTC"
}

volume master {}

load {
    format = "%1min"
}

disk "/" {
    format = "%avail"
}
