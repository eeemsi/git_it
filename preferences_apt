# Prefers updates from testing. All other stuff that is not prefered has to have a lower number
Package: *
Pin: release a=testing
Pin-Priority: 800

# Good for building packages on your own ;)
Package: i3
Pin: release o=Debian
Pin-Priority: -10

Package: i3-wm
Pin: release o=Debian
Pin-Priority: -10

Package: i3-wm-dbg
Pin: release o=Debian
Pin-Priority: -10

# Hints to get the development releases of i3 from build.i3wm.org
# 1) echo 'deb http://build.i3wm.org/debian/sid sid main' >> /etc/apt/sources.list
# 2) apt-get --allow-unauthenticated install i3-autobuild-keyring
Package: *
Pin: origin "build.i3wm.org"
Pin-Priority: 1001

